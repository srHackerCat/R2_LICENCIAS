    <command id="command1" type="Text">
      <text><![CDATA[
select
	"TIPO_PRODUCTO"."ID_TIPO_PRODUCTO" "IDTipoProducto"
	,"TIPO_PRODUCTO"."DESCRIPCION" "Descripcion"
	,"TIPO_PRODUCTO"."COMENTARIOS" "Comentarios"
