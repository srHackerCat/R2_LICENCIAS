      <dataFields>
        <dataField fieldName="PRODUCTO" />
        <dataField fieldName="FECHA_EXPIRA" columns="10" />
        <dataField fieldName="TIPO_PRODUCTO" columns="30" />
        <dataField fieldName="NOMBRE_PROVEEDOR" />
      </dataFields>
    </view>
  </views>
